<%= form_with(model: topic, local: false) do |form| %>
    <div class="modal-body">
      <% if topic.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(topic.errors.count, "error") %> prohibited this topic from being saved:</h2>
          <ul>
            <% topic.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.text_field :name , class:"form-control", placeholder:"Topic Name" %>
      </div>
      <br><br>
      <div class="field">
        <%= form.text_area :description, class:"form-control", placeholder:"Describe about topic" %>
      </div>
      <br><br>
    </div>
    <div class="modal-footer">
      <div class="actions">
        <%= form.submit "submit" , class: "btn btn-success btn-sm" %><br>
      </div>
      <button type="button" class="btn btn-secondary btn-sm close-modal" data-bs-dismiss="modal">Close</button>
    </div>
<% end %>