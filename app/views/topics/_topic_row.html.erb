<tr id="topicRow_<%= topic.id %>" >
  <td><%= topic.name %></td>
  <td><%= topic.description %></td>
  <td><%= link_to 'posts', topic_posts_path(topic), class:"btn btn-outline-primary mar-right btn-sm" %></td>
  <td><%= link_to 'Show', topic, class:"btn btn-outline-primary mar-right btn-sm" %></td>
  <td><%= link_to 'Edit', edit_topic_path(topic), class:"btn btn-outline-primary mar-right btn-sm",data: { bs_toggle: 'modal', bs_target: '#newTopicModal' }, remote: true %></td>
  <td><%= button_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-primary mar-right btn-sm", remote: true %></td>
</tr>