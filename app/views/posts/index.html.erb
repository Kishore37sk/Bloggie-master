<div class="container">
<h1>Posts</h1>

<form action="/posts">
  <input type="date" id="from_date" name="from_date">
  <label for="to_date"> - </label>
  <input type="date" id="to_date" name="to_date">
  <button type="submit" name="commit" value="Show details" class="btn btn-primary btn-sm">Filter By Date</button>
</form>

<%= link_to 'Sort by average rating', { sort: 'rating_average', direction: 'desc'  } , class:"btn btn-primary btn-sm" %>
<% if @topic.present? %>
<%= link_to 'New Post', new_topic_post_path(@topic),class:"btn btn-primary btn-sm",data: { bs_toggle: 'modal', bs_target: '#newPostModal' }, remote: true  %>
<% end %>
<table  id='postsTable' class="table table-striped table-bordered table-primary">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>User</th>
      <th>Read Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
  <%= render 'post_row', post: post %>
  <% end %>
  </tbody>
</table>
<%= will_paginate @posts, class: "apple_pagination" %>
<%= link_to 'Back To Topic',topics_path ,class: "btn btn-primary btn-sm" %>
</div>
<div class="modal fade" id="newPostModal" tabindex="-1" role="dialog" aria-labelledby="newPostModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newPostModalLabel">Modal title</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="newPostForm">
      </div>
    </div>
  </div>
</div>