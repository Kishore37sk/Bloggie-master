<%= form_for(current_user, url: registration_path(current_user),multipart: true, remote: true, :html => { :method => :put }) do |f| %>
  <div class="modal-body">

  <div class="field">
    <%= f.label :avatar %><br/>
    <% if current_user.avatar.attached? %>
      <%= image_tag current_user.avatar, size: '100x100', style: 'border-radius: 50%' %>
    <% else %>
      No avatar found.
    <% end %>
    <br />
    <%= f.file_field :avatar, accept: 'image/png,image/gif,image/jpeg' %>
  </div>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br/>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  </div>
  <div class="modal-footer">
        <%= f.submit "submit" , class: "btn btn-primary btn-sm" %><br>
      <button type="button" class="btn btn-dark btn-sm close-modal" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>

